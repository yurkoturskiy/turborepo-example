{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Payload CMS",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
